.notice
	background-color #fff
	
	&__inner
		position relative
		width 1000px
		min-height 190px
		margin 0 auto
		padding-bottom 32px
		padding-top 40px
		background-image url('../img/left-yel-border.png'),
			url('../img/right-yel-border.png')
		background-position 0 100%, 100% 0
		background-repeat no-repeat
		
	&__img
		position absolute
		bottom 32px
		display inline-block
		padding-left 32px
		max-width (200 - @padding-left)

	&__content
		display inline-block
		font-size 14px
		color #424242
		padding-right 60px
		max-width 800px
		margin-left 200px
		line-height 1.4
		text-align justify

	&__title
		color #e64849