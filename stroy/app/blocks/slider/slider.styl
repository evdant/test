slider_border_color = #fed229

.slider
	width 100%
	position relative
	
	&__order
		position absolute
		right 54px
		top 3px
		width 340px
		height 388px
		background-color rgba(0, 0, 0, .4)
		z-index 10
	
	&__order-title
		color #fff
		text-transform uppercase
		font-family opensans_bold
		text-align center
		font-size 20px
		margin-top 120px
		margin-bottom 35px
		
	&__order-button.button
		button 54px
		width 280px
		margin 0 auto
		text-transform uppercase
		font-family opensans_bold
		font-size 24px
	
	&__slider-list
		position relative
		list-style none
		overflow hidden
		width 100%
		padding 0
		margin 0
	
		&_here
			border 3px solid slider_border_color
	
	&__slide
		-webkit-backface-visibility hidden
		position absolute
		display none
		overflow hidden
		width 100%
		height 394px
		left 0
		top 0 
		border 3px solid slider_border_color

		&:first-child
			position relative
			display block
			float left
  
	&__slide-img
		position relative
		top 50%
		left 50%
		transform translate(-50%, -50%)
		display block
		height auto
		float left
		width 100%
		border 0

	&__pager
		clearfix()
		margin-top 13px
		width 1000px
		
	&__pager-item
		float left
		width 18.72%
		height 125px
		margin-x 0.8%
		
		&:first-child
			margin-left 0
			
		&:last-child
			margin-right 0

	&__pager-img
		width 100%
		height 100%