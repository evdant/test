r_col_marg_top = 115px
blue_color = #2073bf
work_item_height = 227px

.work
	padding-top 60px
	padding-bottom: 40px;
	
	&__inner
		width 1000px
		margin 0 auto
		
	&__left-col
		display inline-block
		width 450px
		text-align right
		float left
		
	&__sep
		position relative
		display inline-block
		width 100px
		margin-top 80px
		
	&__right-col
		display inline-block
		width 450px
		text-align left
		float right
		margin-top r_col_marg_top
		
	&__work-item
		height work_item_height
		
	&__work-icon
		display block
		width 80px
		height 80px
		margin 0 auto
		
	&__num-box
		width 42px
		height 42px
		margin 0 auto
		background-color blue_color
		border-radius 50%
		margin-bottom 72px
		
	&__num-icon
		display block
		width 35px
		height 100%
		margin 0 auto
		
	&__line
		position absolute
		left 49px
		height 700px
		border-right 2px dashed blue_color
		z-index -1