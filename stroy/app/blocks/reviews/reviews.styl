.reviews
	position relative
	padding-bottom 10px
	padding-top 70px
	background url('../img/reviews-bg-min.jpg')
	background-position 0 center
	background-size cover
	
	&:before
		before()
		background rgba(#fff, 0.85)
	
	&__inner
		position relative
		clearfix()
		width 1000px
		margin 0 auto
		color #414141
		
	&__item
		float left
		margin-x 4.5%
		width 41%
		margin-bottom 80px
		
	&__item-title
		text-transform uppercase
		font-family opensans_bold
		margin-bottom 5px
	
	&__item-address
		margin-bottom 20px
		
	&__image-box
		clearfix()
		width 100%
		margin-bottom 30px
		
	&__image-wrap
		position relative
		height 150px
		width 49.25%
		overflow hidden
		float left
		border 1px solid #ffd535
		
		&:first-child
			margin-right 1.5%
	
	&__item-image
		position absolute
		left -9999px
		right -9999px
		top -9999px
		bottom -9999px
		max-height 150px
		margin auto
		

	&__item-content
		clearfix()
		position relative
		min-height 190px
		margin-bottom 35px
		
	&__item-text
		display block
		width 65%
		line-height 1.4
		padding-right 20px
		float left
		text-align justify
		
	&__item-author
		width 35%
		float left
		
	&__author-img-wrap
		position relative
		width 122px
		height 122px
		border-radius 50%
		overflow hidden
		margin 0 auto
		
	&__author-img
		position absolute
		max-height 140px
		left -9999px
		right -9999px
		top -9999px
		bottom -9999px
		margin auto
		
	&__author-name
		margin-top 15px
		text-align center
		font-family opensans_bold_italic
		
	&__item-btn.button
		button(41px)
		width 213px
		font-family opensans_italic
		
	&__arrow-to-btn
		position absolute
		background-image url('../img/reviews-arrow.jpg')
		width 92px
		height 100px
		right 70px
		bottom -70px
		z-index -1